<h1>Listing products</h1>

<%= form_tag search_admin_product_path, method: "get", class: 'form-horizontal'   do %>
   <div class="form-group">
  <div class="col-lg-4">
    <%= text_field_tag :name, nil, class: "form-control col-lg-4", placeholder: 'Search for Product Name'  %>
  </div>
</div>
<% end %> 
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Platform</th>
      <th>Publisher</th>
      <th>Price</th>
      <th>Stock quantity</th>
      <th>Discount percentage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%if @products.count == 0 %>
      <tr>
      <td colspan="10">No product found</td>
      </tr>
    <%else%>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.platform.name %></td>
          <td><%= product.publisher.name %></td>
          <td><%= product.price %></td>
          <td><%= product.stock_quantity %></td>
          <td><%= product.discount_percentage %></td>
          <td><%= link_to 'Show', admin_product_path(product) %></td>
          <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
          <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

