<%
if edit
  url = admin_product_path(@product)
  method = "patch"
else
  url = admin_products_path
  method = "post"
end
%>
 <%= form_for @product, url: url, method: method, html: { multipart: true } do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :stock_quantity %><br>
    <%= f.number_field :stock_quantity %>
  </div>
  <div class="field">
    <%= f.label :discount_percentage %><br>
    <%= f.number_field :discount_percentage %>
  </div>
  <div class="field">
    <%= f.label :coverbox %><br>
    <%= f.file_field :coverbox %>
  </div>
  <div class="field">
    <%= f.label :platform_id %><br>
    <%= f.collection_select :platform_id, Platform.all, :id, :name %>
  </div>
    <div class="field">
    <%= f.label :publisher_id %><br>
    <%= f.collection_select :publisher_id, @publishers, :id, :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
