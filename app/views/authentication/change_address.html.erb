    <%= form_for @address, url: update_address_path, html: {class: 'form-horizontal'} do |a| %>

       <div class="form-group">
        <%= a.label :number, class: "col-lg-2 control-label" %><br/>
        <div class="col-lg-2">
          <%= a.text_field :number, class: "form-control"  %>
        </div>
      </div>


       <div class="form-group">
        <%= a.label :street, class: "col-lg-2 control-label" %><br/>
        <div class="col-lg-10">
          <%= a.text_field :street, class: "form-control"  %>
        </div>
      </div>
       <div class="form-group">
        <%= a.label :province_id, class: "col-lg-2 control-label" %><br/>
        <div class="col-lg-10">
          <%= a.collection_select :province_id, @provinces, :id, :name , class: "form-control"%>
        </div>
      </div>

       <div class="form-group">
        <%= a.label :city, class: "col-lg-2 control-label" %><br/>
        <div class="col-lg-10">
          <%= a.text_field :city, class: "form-control"  %>
        </div>
      </div>
       <div class="form-group">
        <%= a.label :postalcode, class: "col-lg-2 control-label" %><br/>
        <div class="col-lg-10">
          <%= a.text_field :postalcode, class: "form-control"  %>
        </div>
      </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= a.submit 'Atualizar', class: "btn btn-primary"%>
      </div>
    </div>
  </fieldset>
  <% end %>
